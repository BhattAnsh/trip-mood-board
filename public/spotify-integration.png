<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="600" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#f5f5f7" />
      <stop offset="100%" stop-color="#e8e8ec" />
    </linearGradient>
    <filter id="neomorph-shadow" x="-5%" y="-5%" width="110%" height="110%">
      <feDropShadow dx="6" dy="6" stdDeviation="4" flood-color="#a0a0a8" flood-opacity="0.25"/>
      <feDropShadow dx="-6" dy="-6" stdDeviation="4" flood-color="#ffffff" flood-opacity="0.5"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="url(#bgGradient)" rx="15" filter="url(#neomorph-shadow)"/>
  
  <!-- Spotify Player UI -->
  <g transform="translate(50, 50)">
    <!-- Player Container -->
    <rect x="0" y="0" width="500" height="300" fill="#f0f0f3" rx="15" filter="url(#neomorph-shadow)"/>
    
    <!-- Spotify Logo -->
    <g transform="translate(230, 30)">
      <circle cx="20" cy="20" r="20" fill="#1DB954"/>
      <path d="M10,20 C10,14 25,14 25,20 C25,26 10,26 10,20 M7,27 C7,17 28,17 28,27 M5,13 C5,33 30,33 30,13"
        stroke="white" stroke-width="2" fill="none"/>
    </g>
    
    <!-- Text: Trip Soundtrack -->
    <text x="250" y="80" font-family="Arial, sans-serif" font-size="16" font-weight="bold" text-anchor="middle" fill="#60A5E6">Trip Soundtrack</text>
    
    <!-- Album Art -->
    <g transform="translate(50, 100)">
      <rect x="0" y="0" width="120" height="120" rx="8" fill="#60A5E6" opacity="0.3"/>
      <circle cx="60" cy="60" r="30" fill="#60A5E6" opacity="0.7"/>
      <path d="M45,60 L80,45 L80,75 Z" fill="#f0f0f3"/>
    </g>
    
    <!-- Song Info -->
    <g transform="translate(200, 120)">
      <text x="0" y="0" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#555555">Summer Vibes</text>
      <text x="0" y="25" font-family="Arial, sans-serif" font-size="12" fill="#555555" opacity="0.8">Travel Playlist</text>
      
      <!-- Progress Bar -->
      <rect x="0" y="50" width="250" height="6" rx="3" fill="#60A5E6" opacity="0.2"/>
      <rect x="0" y="50" width="120" height="6" rx="3" fill="#60A5E6"/>
      
      <!-- Time -->
      <text x="0" y="75" font-family="Arial, sans-serif" font-size="10" fill="#555555">2:14</text>
      <text x="250" y="75" font-family="Arial, sans-serif" font-size="10" fill="#555555" text-anchor="end">4:32</text>
      
      <!-- Controls -->
      <g transform="translate(125, 100) scale(0.8)">
        <!-- Previous -->
        <circle cx="-40" cy="0" r="15" fill="#60A5E6" opacity="0.2"/>
        <path d="M-35,0 L-45,-10 L-45,10 Z" fill="#60A5E6" transform="rotate(180, -40, 0)"/>
        
        <!-- Play -->
        <circle cx="0" cy="0" r="20" fill="#60A5E6"/>
        <path d="M-5,-10 L10,0 L-5,10 Z" fill="#f0f0f3"/>
        
        <!-- Next -->
        <circle cx="40" cy="0" r="15" fill="#60A5E6" opacity="0.2"/>
        <path d="M35,0 L45,-10 L45,10 Z" fill="#60A5E6"/>
      </g>
    </g>
  </g>
  
  <!-- Connection Lines (representing the connection between music and memories) -->
  <g stroke="#60A5E6" stroke-width="1" stroke-dasharray="4,2" opacity="0.5">
    <path d="M110,200 C130,150 280,150 300,200" fill="none"/>
    <path d="M110,230 C130,280 280,280 300,230" fill="none"/>
  </g>
  
  <!-- Small Memory Cards (appearing to connect with the music) -->
  <g transform="translate(20, 180)">
    <rect x="0" y="0" width="60" height="40" rx="5" fill="#f0f0f3" filter="url(#neomorph-shadow)"/>
    <rect x="5" y="5" width="50" height="30" rx="3" fill="#E660A5" opacity="0.2"/>
    <circle cx="30" cy="20" r="10" fill="#E660A5" opacity="0.4"/>
  </g>
  
  <g transform="translate(320, 180)">
    <rect x="0" y="0" width="60" height="40" rx="5" fill="#f0f0f3" filter="url(#neomorph-shadow)"/>
    <rect x="5" y="5" width="50" height="30" rx="3" fill="#9B60E6" opacity="0.2"/>
    <circle cx="30" cy="20" r="10" fill="#9B60E6" opacity="0.4"/>
  </g>
  
  <g transform="translate(420, 220)">
    <rect x="0" y="0" width="60" height="40" rx="5" fill="#f0f0f3" filter="url(#neomorph-shadow)"/>
    <rect x="5" y="5" width="50" height="30" rx="3" fill="#60E6A5" opacity="0.2"/>
    <circle cx="30" cy="20" r="10" fill="#60E6A5" opacity="0.4"/>
  </g>
  
  <!-- Music notes floating around -->
  <g fill="#60A5E6" opacity="0.6">
    <path d="M500,100 L510,90 L510,120 L505,125 L500,120 L500,100 Z"/>
    <path d="M520,120 L530,110 L530,140 L525,145 L520,140 L520,120 Z"/>
    <circle cx="500" cy="125" r="5"/>
    <circle cx="520" cy="145" r="5"/>
  </g>
</svg> 